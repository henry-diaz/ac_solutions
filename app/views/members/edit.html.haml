%p.select-task
  = t("labels.edit_user")
.row
  .span5.offset2
    = simple_form_for member, url: member_path(member), html: { class: "form-horizontal", method: :put } do |f|
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :first_name
      = f.input :last_name
      - if current_user.role?(:admin)
        = f.input :role, as: :select, collection: User::ROLES.invert, include_blank: t("labels.select")
      .control-group
        .controls.right
          = link_to t("labels.back"), members_url, :class => "button alternative"
          = link_to t("labels.update"), "javascript:;", :class => "button submit-this"
