.form-login
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-inline' }) do |f|
    = f.label :email, t("labels.email"), :class => "login-title"
    = f.text_field :email, :class => "input-xlarge xlarge"
    %br
    %br
    = f.label :password, t("labels.password"), :class => "login-title"
    = f.password_field :password, :class => "input-xlarge xlarge"
    %br
    %br
    .clearfix
      .remember-me
        %label.checkbox{ :for => "user_remember_me" }
          = f.check_box :remember_me
          = t("labels.remember_me")
      .action
        = f.submit t("labels.sign_in"), :class => "button button-large"
%br
%br
%br
%br
%br
%br
%br
.pull-right
  = link_to t("labels.i_forgot_my_password"), new_password_path(resource_name)
